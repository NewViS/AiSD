#include <iterator>
using namespace std;

class ArrMn{
public:
	char intersect(char* a, char* b, char* c){

		int n = 0;

		for(int i = 0; a[i]; ++i){
			for(int j = 0; b[j]; ++j){
				if(a[i]==b[j]){
					c[n++]=a[i];
				}
			}
		}

		c[n] = 0;

		return *c;

	}

	/*ArrMn unite(ArrMn a, ArrMn b){
		ArrMn c;
		int n = 0;

		return 0;
	}*/
};


