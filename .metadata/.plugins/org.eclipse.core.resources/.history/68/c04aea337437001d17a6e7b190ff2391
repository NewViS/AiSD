#include <iterator>;
class ArrMn{
private:
	const int N = 17;
	char elem[N];

public:
	void setElem(char elements[]){
		elem = elements;
	};

	char getElem(){
		return elem;
	};

	ArrMn intersect(ArrMn a, ArrMn b){
		ArrMn c;
		int n = 0;

		for(auto i : a.elem){
			for(auto j : b.elem){
				if(i==j){
					c.elem[n++]=i;
				}
			}
		}

		c[n] = 0;

		return c;

	}

	ArrMn unite(ArrMn a, ArrMn b){
		ArrMn c;
		int n = 0;

		return c;
	}
};


